{
  "expo": {
    "name": "GreenAgro",
    "slug": "GreenAgro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/splash.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    

    "splash": {  
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D5A27"  
    },

    "ios": {
      "supportsTablet": true
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/foreground.png",
        "backgroundColor": "#2D5A27"
      }
    },
    
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    
    "experiments": {
      "typedRoutes": true
    }
  }
}